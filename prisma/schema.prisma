generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int        @id @default(autoincrement())
  uid     String     @unique
  memo    BookMemo[]
  Comment Comment[]
}

model BookMemo {
  id         Int      @id @default(autoincrement())
  title      String
  isbn       String
  isbn13     String?
  createdAt  DateTime @default(now())
  state      String
  score      Int
  start      String?
  end        String?
  field      String?
  role       Role     @default(USER)
  auth       String
  cover      String?
  userId     String
  fieldcount Int?
  author     User     @relation(fields: [userId], references: [uid])

  @@index([userId], map: "BookMemo_userId_fkey")
}

model MemoList {
  id        Int      @id @default(autoincrement())
  userId    String
  isbn      String
  isbn13    String?
  content   String?  @db.MediumText
  createdAt DateTime @default(now())
  keywords  String?
  role      Role     @default(USER)
}

model Comment {
  id        Int      @id @default(autoincrement())
  userId    String
  isbn      String
  isbn13    String?
  score     Int
  createdAt DateTime @default(now())
  content   String?  @db.MediumText
  displayName String
  role      Role     @default(USER)
  User      User     @relation(fields: [userId], references: [uid])

  @@index([userId], map: "Comment_userId_fkey")
}

enum Role {
  USER
  ADMIN
}
